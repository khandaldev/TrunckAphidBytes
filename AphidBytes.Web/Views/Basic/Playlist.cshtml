                //alert(songtrackid);
                $.post('/Basic/GetPlayList', { TrackingID: songtrackid }, function () {
                }).done(function (dataa) {
                    if (dataa.length > 0) {
                        var htmldialogcontent = '';
                        var i = 0;
                        while (i < dataa.length) {
                            htmldialogcontent += '<li class="playname_dialogbox" id="' + dataa[i].toString() + '">' + dataa[i].toString() + '</li>';
                            i++;
                        }
                        if (pl_count < 15) {
