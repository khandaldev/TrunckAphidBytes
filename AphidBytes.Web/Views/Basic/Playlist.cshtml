                        }
                    }
                    $("#addpl").empty();
                    $("#addpl").append(htmldialogcontent);
                    $(".black_screen").show();
                    $("#closeboxa").show();
                });
                $("#addpl").on('click', '.playname_dialogbox', function () {
                    var newPlayName = $(this).text();
