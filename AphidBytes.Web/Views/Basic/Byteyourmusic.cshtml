@model AphidBytes.Accounts.Contracts.Model.MessageModel
@{
    Layout = "~/Views/Shared/_LayoutWhite.cshtml";
    ViewBag.RenderHeader = true;
    ViewBag.RenderFooter = true;
}

@section HeadScripts {
    @Styles.Render("~/bundles/css/clones")
    @Styles.Render("~/Content/themes/base/css")
}

@section scripts{
    @Scripts.Render("~/js/home/clones.js")
}

<div class="container-fluid">
    <div class="row">
        @Html.Partial("~/Views/Basic/Shared/_BasicAccountNav.cshtml")

        <div class="col-md-4 col-md-offset-1">
            <div class="row">
                <div class="col-sm-12">
                    <div class="media-type">
                        <img src="~/img/clones/music.png" alt="music" />
                        <p>Select One</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 txt-center">
                    <a href="@Url.Action("Byteyourmusicsingle")" class="btn btn-music">Single</a>
                    <br />
                    <br />
                    <br />
                    <p class="txt-bold">OR</p>
                    <br />
                    <a href="@Url.Action("Byteyourmusicalbum")" class="btn btn-music">Album</a>
                </div>
            </div>
        </div>
    </div>
</div>
