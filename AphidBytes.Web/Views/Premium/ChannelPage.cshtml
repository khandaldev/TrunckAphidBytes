    function SubscribeChannel(userid,premiumUserID,channelID)
    {
        $.post('/Premium/CheckSession/', {}, function (data) {
            if (data == "NotExists") {
                $(".showadd").attr('style', 'display:block');
            }
            else {
                $(".showadd").attr('style', 'display:none');
                $.post('/Premium/LoginUserSubscription', { UserID: userid, PremiumID: premiumUserID, ChannelId: channelID }, function (data) {
                    if (data == "True") {
                        
                        $("#changesubstatus").attr('style', 'display:none');
                        $("#changeunsubstatus").attr('style', 'display:block');
                    }
                    else {
                        $("#changesubstatus").attr('style', 'display:block');
                        $("#changeunsubstatus").attr('style', 'display:none');
                    }
                });
            }
        });
    }

    function ChannelUnSub(channelId, userid, premiumUserID)
    {
       
        $.post('/Premium/UnsubscribeChannel', { UserId: userid, ChannelId: channelId }, function (data) {
            if (data == "True") {
               // $("#changesubstatus").attr('style', 'display:none');
                $(".Sub").attr('style', 'display:block');
                $("#changeunsubstatus").attr('style', 'display:none');
                //<a href="#"><img src="/images/subscribe_mir.png"id="changesubstatus" onclick="SubscribeChannel()" ></a>
                
            }
            else {
                $("#changesubstatus").attr('style', 'display:block');
                $("#changeunsubstatus").attr('style', 'display:none');
            }
        });
    }
</script> 
