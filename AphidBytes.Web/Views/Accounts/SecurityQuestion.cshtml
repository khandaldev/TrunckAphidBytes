@model AphidBytes.Accounts.Contracts.Model.ForgetPassword
@{
    Layout = "~/Views/Shared/_LayoutWhite.cshtml";
    ViewBag.RenderFooter = true;
    ViewBag.RenderHeader = true;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            @if (Model.Validation.HasCta)
            {
                <div class="row">
                    <div class="col-sm-12">
                        @Html.Partial("~/Views/Shared/_ValidationErrors.cshtml", Model.Validation)
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("SecurityQuestion", "Accounts", FormMethod.Post, new { id = "forget", enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-6 txt-center">
                                <h3>
                                    ? Reset with Security Questions
                                </h3>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">Username:</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username", @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-6 txt-center">
                                <button type="submit" class="btn btn-primary">Next</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>