@model AphidBytes.Web.Models.FeedbackModel
@{
    Layout = "~/Views/Shared/_LayoutWhite.cshtml";
    ViewBag.RenderHeader = true;
    ViewBag.RenderFooter = true;
}

@section HeadScripts {
    @Styles.Render("~/bundles/css/support")
}

@section scripts {
    @Scripts.Render("~/js/home/support.js")
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="txt-center">Feedback</h2>
        </div>
    </div>

    @if (Model.Validation.HasCta)
    {
        <div class="row">
            <div class="col-md-6 col-md-offset-2">
                @Html.Partial("~/Views/Shared/_ValidationErrors.cshtml", Model.Validation)
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "payment-form", enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", placeholder = "Email Address" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = "Subject" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        @Html.TextAreaFor(model => model.Body)
                    </div>
                </div>
                <div class="form-group txt-right">
                    @if(Model.ConfirmationSent)
                    {
                        <p class="confirmation">Thanks for your feedback!</p>
                    }
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            }
        </div>
        <div class="col-md-2 header-img row-offset-med">
            <img src="~/img/support/feedback.png" alt="feedback" class="table-center" />
            What would you like to see us add, delete, or change? Your feedback is important to us.
        </div>
    </div>
</div>


