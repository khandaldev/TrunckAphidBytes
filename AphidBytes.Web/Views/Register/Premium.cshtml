@model AphidBytes.Web.Models.PremiumCodesModel
@{
    Layout = "~/Views/Shared/_LayoutWhite.cshtml";
    ViewBag.RenderHeader = true;
    ViewBag.RenderFooter = true;
}

@section HeadScripts {
    @Styles.Render("~/bundles/css/register")
    @Styles.Render("~/Content/themes/base/css")
}

@section scripts{
    @Scripts.Render("~/js/home/register.js")
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 txt-center">
            <h2 class="premium">Premium Account</h2>
            <div class="account-logo">
                <img src="/img/premium-account.png" alt="premium account" />
            </div>
        </div> 
    </div>
    <div class="row row-offset-small">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "payment-form", enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-3 txt-center">
                        @Html.TextBoxFor(model => model.PremiumEntryCode, new { id = "txt-code", @class = "form-control txt-center" })
                    </div>
                </div>

                if (Model.Validation.HasCta)
                {
                    <div class="form-group">
                        <div class="col-sm-12 txt-center">
                            @Html.Partial("~/Views/Shared/_ValidationErrors.cshtml", Model.Validation)
                        </div>
                    </div>
                }

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-6 txt-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>