@model AphidBytes.Accounts.Contracts.Model.BaseTypes.ISecurityQuestions

@{  
    var questionList1 = new List<SelectListItem> {
                            new SelectListItem{Text="What is your pet’s name ?"},
                            new SelectListItem{Text="What was your first car ?"},
                            new SelectListItem{Text="What is your brother’s birthday ?"},
                            new SelectListItem{Text="What month were you born ?"},
                            new SelectListItem{Text="Where did you vacation last year ?"},
                            new SelectListItem{Text="In what city or town was your first job ?"},
                            new SelectListItem{Text="What primary school did you attend ?"},
                            new SelectListItem{Text="In what city does your nearest sibling live ?"},
                            new SelectListItem{Text="What is the name of your favorite childhood friend ?"},
                            new SelectListItem{Text="What was the name of your first stuffed animal ?"}
                            };
    var questionList2 = new List<SelectListItem> {
                            new SelectListItem{Text="Who is your favorite Actor ?"},
                            new SelectListItem{Text="What is your favorite Cricket team ?"},
                            new SelectListItem{Text="What is your favorite movie ?"},
                            new SelectListItem{Text="In what city or town did your mother and father meet ?"},
                            new SelectListItem{Text="What was your favorite sport in high school ?"},
                            new SelectListItem{Text="What was the make and model of your first car ?"},
                            new SelectListItem{Text="What school did you attend for sixth grade ?"},
                            new SelectListItem{Text="What was the last name of your third grade teacher ?"},
                            new SelectListItem{Text="What was the name of the company where you had your first job ?"},
                            new SelectListItem{Text="What was your favorite food as a child ? "}
                            };

}
<h3>Security Questions</h3>

<div class="form-group">
    <label for="txt-question1" class="col-sm-3 control-label">Question 1:</label>
    <div class="col-sm-4">
        @Html.DropDownListFor(model => model.SecurityQuestion1, questionList1, new { id = "txt-question1", @class = "form-control" })
        <span class="required-field">*</span>
    </div>
</div>

<div class="form-group">
    <label for="txt-answer1" class="col-sm-3 control-label">Answer:</label>
    <div class="col-sm-4">
        @Html.TextBoxFor(model => model.Answer1, new { id = "txt-answer1", @class = "form-control" })
        <span class="required-field">*</span>
    </div>
</div>

<div class="form-group">
    <label for="txt-question2" class="col-sm-3 control-label">Question 2:</label>
    <div class="col-sm-4">
        @Html.DropDownListFor(model => model.SecurityQuestion2, questionList2, new { id = "txt-question2", @class = "form-control" })
        <span class="required-field">*</span>
    </div>
</div>

<div class="form-group">
    <label for="txt-answer2" class="col-sm-3 control-label">Answer:</label>
    <div class="col-sm-4">
        @Html.TextBoxFor(model => model.Answer2, new { id = "txt-answer2", @class = "form-control" })
        <span class="required-field">*</span>
    </div>
</div>