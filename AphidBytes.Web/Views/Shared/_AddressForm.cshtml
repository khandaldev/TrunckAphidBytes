@model AphidBytes.Accounts.Contracts.Model.BaseTypes.IAddressProvider

<h3>Billing Address</h3>

<div class="form-group">
    <label for="txt-address1" class="col-sm-3 control-label">Address Line 1:</label>
    <div class="col-sm-4">
        @Html.TextBoxFor(model => model.AddressLine1, new { id = "txt-address1", @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <label for="txt-address2" class="col-sm-3 control-label">Address Line 2:</label>
    <div class="col-sm-4">
        @Html.TextBoxFor(model => model.AddressLine2, new { id = "txt-address2", @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <label for="txt-city" class="col-sm-3 control-label">City/Town:</label>
    <div class="col-sm-4">
        @Html.TextBoxFor(model => model.City, new { id = "txt-city", @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <label for="txt-state" class="col-sm-3 control-label">State/Province/Region:</label>
    <div class="col-sm-2">
        @Html.TextBoxFor(model => model.Region, new { id = "txt-state", @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <label for="txt-zip" class="col-sm-3 control-label">Postal Code:</label>
    <div class="col-sm-2">
        @Html.TextBoxFor(model => model.PostalCode, new { id = "txt-zip", @class = "form-control", @data_stripe = "address_zip" })
    </div>
</div>